<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block navbarStyle %}
            <link href="css/bootstrap.css" rel="stylesheet">
            <style>

                .sticky {
                    position: -webkit-sticky;
                    position: -moz-sticky;
                    position: -ms-sticky;
                    position: -o-sticky;
                    position: sticky;
                    top: 0px;
                    z-index: 100;
                }

                .bg-lighblue {
                    background: #BBDEFB;
                }

                .navbar-custom .navbar-brand,
                .navbar-custom .navbar-text {
                    color: rgba(255,255,255,.8);
                }

                .navbar-custom .navbar-nav .nav-link {
                    color: rgba(0, 0, 0, 1);
                }

                .navbar-custom .nav-item.active .nav-link,
                .navbar-custom .nav-item:hover .nav-link {
                    color: #FFFFFF;
                }

                .btn-search {
                    background: #E3F2FC;
                    color: black;
                    border-color: black;
                }

                .btn-search:hover{
                    background: #FFFFFF;
                }

                .navbar-nav{
                    color: #FFFFFF;
                }

            </style>
            <link href="../assets/css/bootstrap-responsive.css" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div id="sidebar">
                {% block navbar %}
                    <nav class="navbar navbar-expand-lg bg-lighblue navbar-custom sticky border-bottom border-primary">
                        <a class="navbar-brand" href="{{ path('questions_and_answers_index') }}">
                            <img src="{{ asset('imgs/ebook.png') }}" alt="QNA" height="30px" width="30px"/>
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Content
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item"  href="{{ path('example_new') }}">Create E.g (Example)</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="{{ path('questions_and_answers_new') }}">Create New Q.N.A (Question and answer)</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="https://github.com/lscuquejo" target="_blank">GitHub</a>
                                    </div>
                                </li>
                            </ul>
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item float-right">
                                    <a class="nav-link" href="https://github.com/lscuquejo" target="_blank">
                                        <img src="{{ asset('imgs/github.png') }}" alt="QNA" height="30px" width="30px"/>
                                    </a>
                                </li>

                                <li class="nav-item float-right">
                                    <a class="nav-link" href="https://www.facebook.com/leonardo.soarescuquejo" target="_blank">
                                        <img src="{{ asset('imgs/facebook.png') }}" alt="QNA" height="30px" width="30px"/>
                                    </a>
                                </li>

                                <li class="nav-item float-right">
                                    <a class="nav-link" href="https://www.instagram.com/leonardo_cuquejo/" target="_blank">
                                        <img src="{{ asset('imgs/instagram.png') }}" alt="QNA" height="30px" width="30px"/>
                                    </a>
                                </li>
                            </ul>
                            <form class="form-inline my-2 my-lg-0">
                                <input class="form-control mr-sm-2 btn-search" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-search my-2 my-sm-0" type="submit">Search</button>
                            </form>
                        </div>
                    </nav>
                {% endblock %}
            </div>
        {% endblock %}
        {% block javascripts %}{% endblock %}

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>
