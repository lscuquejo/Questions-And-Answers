{% extends 'base.html.twig' %}

{% block title %}Examples{% endblock %}

{% block body %}

    {% block navbar %}
        {{ parent() }}
    {% endblock %}

    <h1>Example index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>AuthorName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for example in examples %}
            <tr>
                <td>{{ example.id }}</td>
                <td>{{ example.Content }}</td>
                <td>{{ example.authorName }}</td>
                <td>
                    <a href="{{ path('example_show', {'id': example.id}) }}">show</a>
                    <a href="{{ path('example_edit', {'id': example.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('example_new') }}">Create new</a>
{% endblock %}
